{
  "manifestVersion": 1,
  "id": "url-field-plus",
    "publisher": "McHale",
    "version": "2.3.2",
  "name": "URL Field +",
  "description": "Enhanced work item custom control for clickable and editable URLs with dynamic URL building.",
  "public": true,
  "categories": ["Azure Boards"],
  "icons": {
      "default": "images/logo.png"
  },
  "content": {
      "details": {
          "path": "README.md"
      }
  },
  "targets": [
      {
          "id": "Microsoft.VisualStudio.Services"
      }
  ],
  "tags": [
      "Work Item",
      "Work Item control",
      "URL",
      "Link"
  ],
"scopes": [
      "vso.work"
],
  "repository": {
      "type": "git",
      "uri": "https://github.com/mchalepage/azure-devops-extension-url-field"
  },
  "links": {
      "repository": {
          "uri": "https://github.com/mchalepage/azure-devops-extension-url-field"
      },
      "issues": {
          "uri": "https://github.com/mchalepage/azure-devops-extension-url-field/issues"
      },
      "license": {
          "uri": "https://github.com/mchalepage/azure-devops-extension-url-field/blob/main/LICENSE.txt"
      }
  },
  "screenshots": [
      {
          "path": "images/screenshot-1.png"
      },
      {
          "path": "images/screenshot-2.png"
      },
      {
          "path": "images/screenshot-3.png"
      }
  ],
  "contributions": [
      {
          "id": "url-field-plus",
          "type": "ms.vss-work-web.work-item-form-control",
    "description": "Enhanced work item custom control for clickable and editable URLs.",
          "targets": [
              "ms.vss-work-web.work-item-form"
          ],
          "properties": {
              "name": "URL Field +",
              "description": "Enhanced work item custom control for clickable and editable URLs.",
              "uri": "index.html",
              "height": "48",
              "inputs": [
                  {
                      "id": "Url",
                      "name": "URL",
                      "description": "Static URL (https://example.com) OR Dynamic URL with {field} placeholder (https://example.com/{field}) OR {field} for editable/manual URLs. The {field} placeholder will be replaced with the value from the Field parameter below.",
                      "validation": {
                          "dataType": "String",
                          "isRequired": true
                      }
                  },
                  {
                      "id": "Title",
                      "name": "Title",
                      "description": "Show a title instead of a full URL.",
                      "validation": {
                          "dataType": "String",
                          "isRequired": false
                      }
                  },
                  {
                      "id": "Field",
                      "name": "Field",
                      "description": "REQUIRED for dynamic URLs (with {field}), editable URLs, or manual URLs. OPTIONAL only for static URLs. For editable URLs, use a multi-line text field to support long URLs without the 255 character limit.",
                      "type": "WorkitemField",
                      "properties": {
                          "workItemFieldTypes": ["String", "Integer", "Double", "PlainText", "HTML"]
                      },
                      "validation": {
                          "dataType": "String",
                          "isRequired": false
                      }
                  },
                  {
                      "id": "HideUrlIfEmptyField",
                      "name": "Hide if empty Field (true/false)",
                      "description": "Hide the URL when Field value is empty (true/false)",
                      "validation": {
                        "dataType": "Boolean",
                        "isRequired": true
                      }
                    },
                  {
                      "id": "EditableField",
                      "name": "Editable URL Field (true/false)",
                      "description": "When true, allows users to directly enter/edit URLs in this control without needing a separate field. The Field parameter must be set to store the URL value.",
                      "validation": {
                        "dataType": "Boolean",
                        "isRequired": false
                      }
                    }
              ]
          }
      }
  ],
  "files": [
      {
          "path": "index.html",
          "addressable": true
      },
      {
          "path": "urlFieldControl.js",
          "addressable": true
      },
      {
          "path": "urlFieldControl.css",
          "addressable": true
      },
      {
          "path": "images/logo.png",
          "addressable": true
      },
      {
          "path": "README.md",
          "addressable": true
      },
      {
          "path": "LICENSE.txt",
          "addressable": true
      },
      {
          "path": "node_modules/vss-web-extension-sdk/lib",
          "addressable": true,
          "packagePath": "lib"
      }
  ]
}
